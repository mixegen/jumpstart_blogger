<%= form_for(@article, html: {multipart: true, class: 'pure-form pure-form-stacked article'}) do |f| %>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %>
      <%= f.text_area :body, rows: 10 %>
    </p>
    <p>
      <%= f.label :tag_list %>
      <%= f.text_field :tag_list %>
    </p>
    <p>
      <% if @article.image.exists? %>
        <%= image_tag @article.image.url(:thumb) %><br>
      <% end %>
      <%= f.label :image, 'Attach an image' %>
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.submit class: 'pure-button pure-button-primary' %>
    </p>
<% end %>